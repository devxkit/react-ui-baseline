{
  "name": "@devxkit/react-ui-baseline",
  "version": "0.0.0",
  "description": "Ui baseline for react applications",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "homepage": "https://github.com/devxkit/react-ui-baseline",
  "repository": "git@github.com:devxkit/react-ui-baseline.git",
  "author": "AndreÃÅ Hoendgen <hello@andre-hoendgen.de>",
  "license": "MIT",
  "scripts": {
    "prepare": "run-s export",
    "export": "run-s cleanup build",
    "build": "rollup -c",
    "cleanup": "rimraf dist",
    "format": "eslint ./src/**/*.ts --fix",
    "lint": "eslint ./src/**/*.ts"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/eslint": "^7.28.0",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/prettier": "^2.3.2",
    "@types/react": "^17.0.18",
    "@types/react-native": "^0.64.13",
    "@types/rimraf": "^3.0.1",
    "@types/rollup-plugin-peer-deps-external": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-xo": "^0.38.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-native": "^0.65.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.2",
    "rollup-plugin-dts": "^3.0.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.[js|ts]": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "xo",
      "prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier",
      "@typescript-eslint"
    ]
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-native": "^0.65.0"
  }
}
